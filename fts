#!/usr/bin/env python3

import os
import sys
import json
import sqlite3
import logging
import argparse
from os.path import basename
from signal import signal, SIGINT, SIGPIPE, SIG_DFL as IGNORE

signal(SIGINT, IGNORE)
signal(SIGPIPE, IGNORE)

DBNAME = "pins.sqlite3"

class Cursor:
    def __init__(self, ro=False):
        self.ro = ro

    def __enter__(self):
        self.con = sqlite3.connect("pins.sqlite3")
        self.cur = self.con.cursor()

        if self.ro:
            self.con.executescript("""
                PRAGMA query_only = on;
                PRAGMA synchronous = off;
                PRAGMA mmap_size = 250000000;
                PRAGMA temp_store = memory;
                PRAGMA journal_mode = off;
                PRAGMA cache_size = -25000;
            """)

        return self.cur

    def __exit__(self, _type, _value, _tb):
        if not self.ro:
            self.con.commit()
        self.con.close()

def v(h, k):
    return h[k] if k in h else None

def index(cur, stream):
    data = json.load(stream)
    items = [(v(x,"title"), v(x,"arg"), v(x,"subtitle"), v(x,"match")) for x in data["items"]]

    cur.executescript("""
        DROP TABLE IF EXISTS pins;

        CREATE VIRTUAL TABLE
        IF NOT EXISTS pins
        USING FTS5(title, url, note, keywords, tokenize="trigram");
    """)

    cur.executemany("""
        INSERT INTO pins(title, url, note, keywords)
        VALUES (?, ?, ?, ?)
    """, items)

def exec_search(cur, query):
    sql = f"""
        SELECT title, url, note, keywords
        FROM pins
        WHERE
            (title MATCH '{query}')
            OR (url MATCH '{query}')
            OR (note MATCH '{query}')
            OR (keywords MATCH '{query}')
        ORDER BY RANK DESC
    """

    logging.debug("executing query: %s", query)

    asitem = lambda row: {"title":row[0], "arg":row[1], "subtitle":row[2], "match":row[3]}
    return [asitem(row) for row in cur.execute(sql)]

logger = logging.getLogger(__name__)
logging.basicConfig(
    stream=sys.stdout,
    format='[%(asctime)s] %(levelname)s * %(message)s',
    level=logging.DEBUG if os.getenv("DEBUG") else logging.ERROR)

parser = argparse.ArgumentParser(prog=basename(sys.argv[0]), description="full text search for pins")
parser.add_argument("-i", "--index", default=False, action="store_true", help="create the index")
parser.add_argument("query", nargs="?")

args = parser.parse_args()

if args.index and args.query:
    parser.error("cannot index and search at the same time")
elif not args.index and not args.query:
    parser.error("query is required")
elif args.index:
    with Cursor(ro=False) as cur:
        index(cur, sys.stdin)
elif args.query:
    with Cursor(ro=True) as cur:
        print(json.dumps({"items": exec_search(cur, args.query)}))
else:
    parser.error("invalid command")